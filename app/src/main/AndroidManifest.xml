<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.matah.sligro_app">

    <application
        tools:replace="android:supportsRtl"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GuideOverviewActivity"
            android:label="@string/title_activity_guide_overview"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.matah.sligro_app.MainActivity" />
        </activity>
        <activity
            android:name=".DetailsActivity"
            android:label="@string/home"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".chat"
            android:label="Chat"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".Notifications"
            android:label="@string/home"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".TestParticularActivity"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>